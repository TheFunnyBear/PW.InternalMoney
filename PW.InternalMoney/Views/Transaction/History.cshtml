@model IEnumerable<PW.InternalMoney.Models.TransactionHistoryItem>

@{
    ViewBag.Title = "Transactions history";

}
<br />

<input class="form-control py-2" type="text" id="correspondentSearchInput" onkeyup="FilterCorrespondentsByName()" placeholder="Search for correspondent names..">

<table id="dtHistory" class="table table-striped table-bordered table-sm sortable" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm" data-defaultsign="time">
                Date/Time
                <i class="fa fa-sort float-right" aria-hidden="true"></i>
            </th>
            <th class="th-sm" data-defaultsign="AZ">
                Correspondent Name
                <i class="fa fa-sort float-right" aria-hidden="true"></i>
            </th>
            <th class="th-sm" data-defaultsign="_19">
                Debit
                <i class="fa fa-sort float-right" aria-hidden="true"></i>
            </th>
            <th class="th-sm" data-defaultsign="_19">
                Credit
                <i class="fa fa-sort float-right" aria-hidden="true"></i>
            </th>
            <th class="th-sm" data-defaultsign="_19">
                Balance
                <i class="fa fa-sort float-right" aria-hidden="true"></i>
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date</td>
                <td>@item.CorrespondentName</td>
                @if (@item.Debit.Amount != 0)
                {
                    <td>@item.Debit</td>
                }
                else
                {
                    <td>-</td>
                }
                @if (@item.Credit.Amount != 0)
                {
                    <td>@item.Credit</td>
                }
                else
                {
                    <td>-</td>
                }
                <td>@item.Balance</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                Date/Time
            </th>
            <th>
                Correspondent Name
            </th>
            <th>
                Debit
            </th>
            <th>
                Credit
            </th>
            <th>
                Balance
            </th>
        </tr>
    </tfoot>
</table>