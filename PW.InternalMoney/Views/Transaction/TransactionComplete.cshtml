@model PW.InternalMoney.Models.TransactionListItem

@{
    ViewBag.Title = "Transaction complete";
}

<h2>@ViewBag.Title.</h2>

<div>
    <h4>Transaction complete successfully.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CorrespondentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CorrespondentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TransactionAmount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TransactionAmount)
        </dd>

    </dl>
</div>
<p>

    <a href="@Url.Action("Create", "Transaction" )" class="btn btn-info">
        Create new transaction
        <span class="glyphicon glyphicon glyphicon-transfer" aria-hidden="true"></span>
    </a>

    <a href="@Url.Action("List", "Transaction" )" class="btn btn-info">
        Show last transactions
        <span class="glyphicon glyphicon glyphicon-transfer" aria-hidden="true"></span>
    </a>

    <a href="@Url.Action("History", "Transaction" )" class="btn btn-info">
        Show history
        <span class="glyphicon glyphicon glyphicon-th-list" aria-hidden="true"></span>
    </a>

</p>

